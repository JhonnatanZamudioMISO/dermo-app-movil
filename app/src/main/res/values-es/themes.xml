<resources>
    <!-- Base application theme. -->
    <style name="Theme.DermoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_dark</item>
        <item name="colorOnPrimary">@color/blue_clear</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/yellow_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LaunchTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_lanch</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:paddingTop">50dp</item>
        <item name="android:windowBackground">@color/black_85</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/background_dialog</item>
        <item name="fontFamily">@font/helveticaltsdbold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>